{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    "lib": ["es2020", "dom"], // Ajouter "dom" pour React
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    
    /* JSX pour React Email */
    "jsx": "react-jsx", // Support moderne de JSX
    "jsxImportSource": "react", // Source des imports JSX
    
    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@models/*": ["./models/*"],
      "@controllers/*": ["./controllers/*"],
      "@services/*": ["./services/*"],
      "@middleware/*": ["./middlewares/*"],
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"],
      "@emails/*": ["./emails/*"], // Dossier pour vos templates d'emails
      "@templates/*": ["./templates/*"], // Alternative pour templates
      "@type":["./types/*"],
 
    }
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "jsx": "react-jsx" // Configuration sp√©cifique pour ts-node
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}